<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uottawa.tournamentmaker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainPage"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuickStart"
            android:label="@string/title_activity_quick_start"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TournamentOptions"
            android:label="@string/title_activity_tournament_options"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Scoreboard"
            android:label="@string/title_activity_scoreboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TeamOptions"
            android:label="@string/title_activity_team_options"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TournamentView"
            android:label="@string/title_activity_tournament_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".HelpPage" />
        <activity android:name=".EditMatchScorePage"></activity>
    </application>

</manifest>
